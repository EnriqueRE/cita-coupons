<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="25dp"
        >

    <Button
            android:id="@+id/btn_zara"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Write Zara Tag"

            android:layout_marginBottom="15dp"
            android:padding="25dp"
            android:textSize="25sp"
            />

    <Button android:id="@+id/btn_starbucks" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="Write Starbucks Tag"
            android:layout_marginBottom="15dp" android:padding="25dp" android:textSize="25sp"
            />
    <Button android:id="@+id/btn_bn" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="Write Barnes and Noble Tag"
            android:layout_marginBottom="15dp" android:padding="25dp" android:textSize="25sp"
            />
    <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            />


</LinearLayout>